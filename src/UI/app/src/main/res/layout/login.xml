<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">


    <LinearLayout
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="25dp"
            android:text="@string/User"
            android:textColor="@color/border_color"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:text="@string/ingresa"
            android:textColor="@color/border_color"
            android:textSize="20dp" />



        <android.support.design.widget.TextInputEditText
            android:id="@+id/dni"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/my_border"
            android:hint="@string/nDni"
            android:paddingLeft="10dp"
            android:textColor="@color/border_color"
            android:textColorHint="@color/hint_color" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/firstCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/secondCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/thirdCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fourthCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fifthCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sixCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle2"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="300dp"
        android:layout_marginTop="180dp"
        android:background="@color/background_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:gravity="right">
                <Button
                    android:id="@+id/one"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:text="1"
                    android:textColor="@color/border_color"
                    android:background="@drawable/circle" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:gravity="bottom">
                <Button
                    android:id="@+id/two"
                    android:text="2"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:gravity="left">
                <Button
                    android:id="@+id/three"
                    android:text="3"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:gravity="right">
                <Button
                    android:id="@+id/four"
                    android:text="4"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:gravity="bottom">
                <Button
                    android:id="@+id/five"
                    android:text="5"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/circle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:gravity="left">
                <Button
                    android:id="@+id/six"
                    android:text="6"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:gravity="right">
                <Button
                    android:id="@+id/seven"
                    android:text="7"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:gravity="bottom">
                <Button
                    android:id="@+id/eight"
                    android:text="8"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:gravity="left">
                <Button
                    android:id="@+id/nine"
                    android:text="9"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle" />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:gravity="right">


            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:gravity="bottom">
                <Button
                    android:id="@+id/eleven"
                    android:text="0"
                    android:textColor="@color/border_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:gravity="left">

                <ImageButton
                    android:id="@+id/delete"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backspace" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="470dp"
        android:orientation="vertical"
        android:textAlignment="center"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/background_color"
            android:text="@string/resgistrate"
            android:textColor="@color/yapeButtons"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/olvideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/olvide"
            android:textColor="@color/yapeButtons"
            android:textSize="15dp" />
    </LinearLayout>




</RelativeLayout>